{
	"name": "personal-blog",
	"description": "A blog for posting personal articles",
	"version": "1.1.0",
	"author": "Georgios Kampitakis",
	"dependencies": {
		"gatsby": "^2.20.18",
		"gatsby-image": "^2.3.2",
		"gatsby-plugin-catch-links": "^2.2.1",
		"gatsby-plugin-google-analytics": "^2.2.2",
		"gatsby-plugin-manifest": "^2.3.3",
		"gatsby-plugin-nprogress": "^2.2.1",
		"gatsby-plugin-offline": "^3.1.2",
		"gatsby-plugin-react-helmet": "^3.2.2",
		"gatsby-plugin-sass": "^2.2.1",
		"gatsby-plugin-sharp": "^2.5.4",
		"gatsby-plugin-sitemap": "^2.3.1",
		"gatsby-plugin-twitter": "^2.2.2",
		"gatsby-remark-autolink-headers": "^2.2.1",
		"gatsby-remark-copy-linked-files": "^2.2.1",
		"gatsby-remark-images": "^3.2.2",
		"gatsby-remark-prismjs": "^3.4.1",
		"gatsby-remark-relative-images": "^0.3.0",
		"gatsby-remark-responsive-iframe": "^2.3.1",
		"gatsby-source-filesystem": "^2.2.2",
		"gatsby-source-strapi": "0.0.12",
		"gatsby-transformer-remark": "^2.7.1",
		"gatsby-transformer-sharp": "^2.4.4",
		"lodash": "^4.17.15",
		"lodash.kebabcase": "4.1.1",
		"moment": "^2.24.0",
		"node-sass": "^4.13.1",
		"prismjs": "^1.20.0",
		"react": "^16.13.1",
		"react-device-detect": "^1.11.14",
		"react-dom": "^16.13.1",
		"react-easy-emoji": "^1.4.0",
		"react-github-btn": "^1.1.1",
		"react-helmet": "^6.0.0",
		"react-share": "^4.1.0",
		"react-twitter-widgets": "^1.7.1",
		"sharp": "^0.22.1",
		"url-join": "^4.0.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^8.3.5",
		"@commitlint/config-conventional": "^8.3.4",
		"cli-glob": "^0.1.0",
		"eslint": "^6.8.0",
		"eslint-config-airbnb": "^18.1.0",
		"eslint-config-prettier": "^6.10.1",
		"eslint-plugin-import": "^2.20.2",
		"eslint-plugin-jsx-a11y": "^6.2.3",
		"eslint-plugin-react": "^7.19.0",
		"husky": "^4.2.5",
		"prettier": "^2.0.4",
		"pretty-quick": "^2.0.1",
		"remark-cli": "^8.0.0",
		"remark-preset-lint-recommended": "^4.0.0",
		"stylelint": "^13.3.2",
		"stylelint-config-prettier": "^8.0.1",
		"stylelint-config-standard": "^20.0.0",
		"write-good": "^1.0.2"
	},
	"keywords": [
		"blog",
		"tech",
		"post",
		"gkampitakis"
	],
	"license": "MIT",
	"scripts": {
		"dev": "gatsby develop",
		"serve": "gatsby serve",
		"build": "gatsby build",
		"build:pp": "gatsby build --prefix-paths",
		"clean": "rimraf public .cache",
		"lint:js": "eslint --ext .js,.jsx .",
		"lint:md": "remark content/",
		"write-good": "write-good $(glob 'content/posts/**/*.md')",
		"format": "prettier 'src/**/*.{js,jsx,scss}' --write"
	},
	"remarkConfig": {
		"plugins": [
			"remark-preset-lint-recommended"
		]
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged && npm run lint:js",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	}
}
